<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dovar.borderradius.MainActivity">


    <TextView
        android:id="@+id/tv_func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="圆角大小"
        app:layout_constraintBottom_toBottomOf="@+id/et_print"
        app:layout_constraintTop_toTopOf="@+id/et_print"/>

    <EditText
        android:id="@+id/et_print"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="点击输入"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/tv_func"/>

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="点击修改圆角颜色"
        app:layout_constraintTop_toBottomOf="@+id/tv_func"/>

</android.support.constraint.ConstraintLayout>
